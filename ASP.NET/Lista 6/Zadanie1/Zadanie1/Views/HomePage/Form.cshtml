@{
    Layout = null;
}

<!DOCTYPE html>
@{ 
    ViewBag.Title = "Form";
    var name = ViewData["name"];
    var surname = ViewData["surname"];
    var class_name = ViewData["class_name"];
    int[] points = ViewData["Z"] as int[];
    int sum = 0;
    foreach(int point in points)
    {
        sum += point;
    }
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <table style="border-collapse: collapse; width: 580px" border="1">
            <tr>
                <td colspan="4" style="width: 80px">
                    @name
                </td>
                <td colspan="5" style="width: 100px">
                    @surname
                </td>
                <td colspan="15" style="width: 300px">
                    @class_name
                </td>
                <td colspan="5" style="width: 100px">
                    @DateTime.Now.Date
                </td>
            </tr>
            <tr>
                <td colspan="3" style="width: 60px">
                    Zadania:
                </td>
                @for (int i = 0; i < 10; i++)
                {
                    <td colspan="2" style="width: 40px">
                        @((i+1).ToString())
                    </td>
                }
                <td colspan="5"></td>
            </tr>
            <tr>
                <td colspan="3" style="width: 60px">
                    Punkty:
                </td>
                @for(int i = 0; i < 10; i++)
                {
                    <td colspan="2">
                        @points[i]
                    </td>
                }
                <td colspan="3">
                    Suma:
                </td>
                <td colspan="2">
                    @sum
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
